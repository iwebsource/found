  </div>
  <div class="field">
    <%= f.label :project_id, "Select Project" %>
    <%= f.collection_select :project_id, Project.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.text_area :summary, :required => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <br />
<% end %>
</div>
</div>
