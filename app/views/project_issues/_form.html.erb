<div class="row">
<div class="medium-6 columns">
<%= form_for(@project_issue) do |f| %>
  <% if @project_issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project_issue.errors.count, "error") %> prohibited this project_issue from being saved:</h2>

      <ul>
      <% @project_issue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, :label => 'Issue Name', :required => true, :placeholder => "Enter the Name of the Issue" %>
  </div>
  <div class="field">
    <%= f.label :project_id, "Select Project" %>
    <%= f.collection_select :project_id, Project.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.text_area :summary, :label => 'Description of Issue', :required => true, :placeholder => "Detailed Description of the Issue " %>
  </div>

 <fieldset>
<legend>Priority and Status</legend>
  <div class="field">
<%= f.label :priority, "Select Priority" %>
      <label>
        <select name="project_issue[priority]">
          <option value="Low">Low</option>
          <option value="Medium">Medium</option>
          <option value="High">High</option>
        </select>
      </label>
    </div>
<br />
  <div class="field">
<%= f.label :status, "Current Status" %>
      <label>
        <select name="project_issue[status]">
          <option value="Open">Open</option>
          <option value="In Progress">In Progress</option>
          <option value="Closed">Closed</option>
        </select>
      </label>
    </div>

    </fieldset>

  <div class="actions">
    <%= f.submit %>
  </div>
  <br />
<% end %>
</div>
</div>
