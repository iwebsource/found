<% breadcrumb :project_issues %>
<div class="row">
<div class="medium-6 columns">
<div class="panel callout radius">
<p>
  <strong>Issue Name:</strong>
  <%= @project_issue.name %>
</p>

<p>
  <strong>Project:</strong>
  <%= Project.find(@project_issue.project_id).name %>
</p>

<p>
  <strong>Description of Issue:</strong>
  <%= @project_issue.summary %>
</p>

<p>
  <strong>Priority:</strong>
  <%= @project_issue.priority %>
</p>

<p>
  <strong>Current Status:</strong>
  <%= @project_issue.status %>
</p>

<ul class="button-group">
<li><%= link_to 'Edit Issue', edit_project_issue_path(@project_issue), :class => 'tiny button success radius' %></li>
<li><%= link_to 'Back', project_issues_path, :class => 'tiny button success radius' %></li>
<li><%= link_to 'Delete Issue', @project_issue, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'tiny button alert radius' %></li>
</ul>
</div>
</div>
</div>
