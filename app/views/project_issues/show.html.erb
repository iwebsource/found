<% breadcrumb :project_issues %>
<div class="row">
<div class="large-5 columns">
<div class="panel callout radius">
<p>
  <strong>Name:</strong>
  <%= @project_issue.name %>
</p>

<p>
  <strong>Code lang:</strong>
  <%= @project_issue.code_lang_id %>
</p>

<p>
  <strong>Project:</strong>
  <%= @project_issue.project_id %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @project_issue.summary %>
</p>

<ul class="button-group">
<li><%= link_to 'Edit', edit_project_issue_path(@project_issue), :class => 'tiny button success' %></li>
<li><%= link_to 'Back', project_issues_path, :class => 'tiny button success' %></li>
</ul>
</div>
</div>
</div>
