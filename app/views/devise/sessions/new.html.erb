<% breadcrumb :users, @login %>
<div class="row">
<div class="large-3 columns">
<h2><i class="fi-at-sign"></i> Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.email_field :email, :autofocus => true, :placeholder => "Type Email Here" %></div>

  <div><%= f.password_field :password, :placeholder => "Type Password Here" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
<br />
<br />
</div>
</div>
